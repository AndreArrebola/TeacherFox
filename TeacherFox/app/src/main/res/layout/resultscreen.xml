<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/butbg"
    tools:context="com.teacherfox.legendary.teacherfox.Results">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Resultado"
        android:id="@+id/txRes"
        android:textColor="#FFFFFF"
        android:textStyle="bold"

        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="+00$"
        android:id="@+id/gotMoney"
        android:layout_alignTop="@+id/gotExp"
        android:layout_toRightOf="@+id/relativeLayout3"
        android:layout_toEndOf="@+id/relativeLayout3" />

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:id="@+id/foxfull"
        android:background="@drawable/skin0full"
        android:layout_below="@+id/txRes"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:id="@+id/hatavr" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/botaoorgmd"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:onClick="returnToMenu"
        android:id="@+id/relativeLayout3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        fm
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Menu"
            android:textStyle="bold"

            android:id="@+id/textView4"
            android:textSize="35sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="+00$"
        android:id="@+id/gotExp"
        android:layout_above="@+id/relativeLayout3"
        android:layout_toLeftOf="@+id/txRes"
        android:layout_toStartOf="@+id/txRes" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txlvl"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/gotMoney"
        android:layout_alignBottom="@+id/gotMoney"
        android:layout_centerHorizontal="true" />

</RelativeLayout>