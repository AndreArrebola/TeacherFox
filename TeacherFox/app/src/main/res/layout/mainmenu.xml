<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/colorBackground">

    <include
        layout="@layout/barra" android:id="@+id/thebar" />

    <RelativeLayout
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/botaomd"
        android:id="@+id/btn_jogorapido"
        android:onClick="irQuestao"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clockicon"
            android:id="@+id/imageView2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />
        <TextView
            android:id="@+id/jogoraptxt"
            android:layout_width="wrap_content"
            android:text="@string/jogorapido"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textColor="@color/abc_primary_text_disable_only_material_light"
            android:layout_gravity="bottom|center"
            android:alpha="0.8"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingBottom="8dp"
            android:paddingRight="8dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/botaomd"
        android:id="@+id/btn_modoestudo"
        android:onClick="irEstudo"
        android:layout_above="@+id/relativeLayout2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bookicon"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/estudar"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/abc_primary_text_disable_only_material_light"
            android:layout_gravity="bottom|center"
            android:alpha="0.8"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:background="@drawable/botaomd"
        android:layout_below="@+id/btn_jogorapido"
        android:layout_centerHorizontal="true"
        android:onClick="irLoja"
        android:layout_marginTop="25dp"
        android:id="@+id/relativeLayout2">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shopicon"
            android:scaleType="fitCenter"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/opcoes"

            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/abc_primary_text_disable_only_material_light"
            android:alpha="0.8"
            android:id="@+id/textView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
</RelativeLayout>